<div style="margin-top: 10vh">
<h2>Your Logged Drinks</h2>
  <p id="drinkscount">Total Drinks Logged: {{drinks.length}}</p>

    <a class="add-another-button" href="/alcohol/create">Add Another</a>

  {{#each drinks}}
  <div class="drinks-container">

    <h3 class="drinks">{{name}}</h3>
    <p><span style="font-weight: bold;">Rating:</span> {{rating}}/10</p>
    <p><span style="font-weight: bold;">Alcohol Percentage:</span> {{percentage}}</p>
    <p><a href="/alcohol/{{_id}}">See all details...</a></p>

    <div class="drinks-list">
      <div class="edit-delete">
        
        <a href="/alcohol/{{_id}}/edit" id="edit">Edit</a>
      <form action="/alcohol/{{_id}}/delete" method="POST" id="annoying-form">
        <button id="delete">Delete</button>
      </form>

      </div>
    </div>
    </div>  
  {{/each}}

</div>
  
  <a class="back" href="/user-profile">Back</a>

