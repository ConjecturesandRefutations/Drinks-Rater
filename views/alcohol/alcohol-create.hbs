    <button class="logout-button">Logout</button>
</form>

<div class="add-container">

<h2>Add a Drink</h2>

<form action="/alcohol/create" method="post">

  <label> Name:
    <input type="text" name="name" />
  </label>

  <label> Description:
    <br>
    <textarea name="description" cols="30" rows="4"> </textarea>
    
  </label>

  <label> Rating (out of 10):
     <input type="number|numberDecimal" name="rating" min="1" max="10" />
  </label>

   <label> Alcohol Percentage:
    <input type="number|numberDecimal" name="percentage"  min="0" max="100" placeholder="4.5"/>
  </label>

  <button type="submit"> Add </button>

</form>

  <br/>
  <a href="/user-profile" class="back">Back</a>
  
</div>