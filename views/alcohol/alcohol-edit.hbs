<h2>Edit the drink: {{alcohol.name}}</h2>

<form action="/alcohol/{{alcohol._id}}/edit" method="post">
  <label> Name:
    <input type="text" name="name" value="{{alcohol.name}}" />
  </label>

  <label> Description:
     <textarea name="description" cols="30" rows="4">{{alcohol.description}}</textarea>
  </label>

  <label> Rating:
     <input type="number|numberDecimal" name="rating" min="1" max="10" value="{{alcohol.rating}}" />/10
  </label>

  <label> Percentage:
    <input type="number|numberDecimal" name="percentage" value="{{alcohol.percentage}}"/>
  </label>

  <button>Save changes</button>
</form>