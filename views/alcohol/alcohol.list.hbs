<h1>Drinks</h1>
 <p id="drinkscount">Total Drinks Logged: {{drinks.length}}</p>
<li class="to-right">
               <a href="/user-profile" class="text-lg">Back to Profile</a> <span> | </span>
               <form id="logout-form" action="/logout" method="POST">
                  <button class='logout border-blue-500 md:border-2 hover:bg-blue-500 hover:text-white transition ease-out duration-500'>Logout</button> <span> | </span>
               </form>
            </li>

            <button id="another"><a href="/alcohol/create" id="another-button" class="text-lg">Add Another</a> </button>
            <ul></ul>

<section class="mt-5 flex flex-wrap">
{{#each drinks}}
<div class="bg-white shadow-md p-4 rounded-md mb-4 hover:shadow-lg mr-4 w-96">
    <h3 class="text-xl font-bold">{{name}}</h3>
    <p>{{rating}}/10</p> 
   <div id="drinks-list" class="mt-5">
    <a href="/alcohol/{{_id}}" class='details border-green-500 ml-2 md:border-2 hover:bg-green-500 hover:text-white w-30 transition ease-out duration-500'>See details</a> 
    <a href="/alcohol/{{_id}}/edit" class='edit border-orange-500 ml-2 md:border-2 hover:bg-orange-500 hover:text-white w-20 transition ease-out duration-500'>Edit</a> 

  <form action="/alcohol/{{_id}}/delete" method="POST" class='delete border-red-500 ml-2 md:border-2 hover:bg-red-500 hover:text-white w-20 transition ease-out duration-500'> 
      <button>DELETE</button>
    </form>
  </div>
  </div>
{{/each}}
</section>
