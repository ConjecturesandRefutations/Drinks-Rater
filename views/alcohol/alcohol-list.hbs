<div class="drinks-container">

  <form action="/user-profile" class="back">
  <button>Back</button>
  </form>

  <h2>Drinks</h2>
  <p id="drinkscount">Total Drinks Logged: {{drinks.length}}</p>

  <div class="add-another-button">
    <button><a href="/alcohol/create">Add Another</a></button>
  </div>

  {{#each drinks}}
  <hr>
    <h3 class="drinks">{{name}}</h3>
    <p>Rating: {{rating}}/10</p>
    <p>Alcohol %: {{percentage}}</p>
    <div class="drinks-list">
      <a href="/alcohol/{{_id}}">See details</a>

      <div class="edit-delete">
        
        <a href="/alcohol/{{_id}}/edit" id="edit">Edit</a>
      <form action="/alcohol/{{_id}}/delete" method="POST" id="annoying-form">
        <button id="delete">Delete</button>
      </form>

      </div>
      <hr>
    </div>
  {{/each}}
</div>  